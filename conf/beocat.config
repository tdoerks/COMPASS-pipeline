/*
 * -------------------------------------------------
 *  Beocat HPC cluster config
 * -------------------------------------------------
 * Configuration for Kansas State University's Beocat cluster
 * https://www.k-state.edu/hpc/
 */

process {
    executor = 'slurm'
    queue = 'batch.q'

    // Beocat-specific error handling
    errorStrategy = { task.exitStatus in [143,137,104,134,139] ? 'retry' : 'finish' }
    maxRetries = 3
}

// Cluster-specific parameters
params {
    // Database paths on Beocat
    max_memory = 250.GB
    max_cpus = 32
    max_time = 7.d
}

// Additional settings for SLURM
executor {
    queueSize = 100
    submitRateLimit = '10 sec'
}
